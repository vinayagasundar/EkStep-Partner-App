<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AksharaTheme" parent="AksharaTheme.Base">

    </style>

    <style name="AksharaTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <!-- <item name="colorPrimaryDark">@color/transparent_twt</item>-->
        <item name="colorAccent">@color/ColorPrimaryDark</item>
    </style>
    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!--text style-->
    <style name="EditText_style" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/editext_backgrd</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_text_lablel_value</item>
        <item name="android:textColorHint">@color/color_text_lablel_value</item>
        <item name="android:textSize">@dimen/size_text_label_value</item>
    </style>

    <style name="EditText_round_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/btn_dropdown</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_text_lablel_value</item>
        <item name="android:textColorHint">@color/color_text_lablel_value</item>
        <item name="android:textSize">@dimen/size_text_label_value</item>
    </style>

    <style name="EditTextComment_round_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/btn_dropdown</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:maxLines">10</item>
        <item name="android:textColor">@color/color_text_lablel_value</item>
        <item name="android:textColorHint">@color/color_text_lablel_value</item>
        <item name="android:textSize">@dimen/size_text_label_value</item>
    </style>

    <style name="Label_Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/color_text_lablel</item>
        <item name="android:textSize">@dimen/size_text_label</item>
    </style>

    <style name="Label_Value_Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/color_text_lablel_value</item>
        <item name="android:textSize">@dimen/size_text_label_value</item>
    </style>


    <style name="border" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/drop_shadow_gradient</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/shape_drop_down_normal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="search_style">
        <item name="android:background">@drawable/spinner_popup_backgrnd</item>

    </style>

    <style name="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/color_text_lablel</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_Spinnstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/color_text_lablel_value</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_Spinnstyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/color_text_lablel_value</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_Spinner_popupstyle">
        <item name="android:background">@drawable/spinner_popup_backgrnd</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/color_text_lablel_value</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AksharaTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AksharaTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
